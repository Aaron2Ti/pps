- content_for :head do
  = stylesheet_link_tag 'paper'
- content_for :recommend do
  %p
    本周下载次数最多:
  %div.paper
    = image_tag @recommend_part.jpg
    %p= @recommend_part.desc

%p 最近上传的8张图
- @parts.each do |part|
  %div.paper  
    = image_tag part.jpg
    = link_to '查看', part_path(part), :class => 'show'
    = link_to '编辑', edit_part_path(part), :class => 'edit'
    = link_to '删除', part_path(part), :method => :delete, :class => 'delete'
    %p= part.desc
